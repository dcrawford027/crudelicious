@{
    ViewData["Title"] = "Edit Dish";
}
@model Dish

<div class="container pt-5">
    <div class="row">
        <h1 class="text-center">Add a new Dish!</h1>
    </div>

    <div class="row">
        <a asp-action="Index">Home</a>
    </div>

    <form asp-action="Update" asp-route-dishId="@Model.DishId" method="POST">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Chef"></label>
                    <input asp-for="Chef" class="form-control" value="@Model.Chef">
                    <span asp-validation-for="Chef" class="text-danger font-weight-bold"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories" class="form-control" value="@Model.Calories">
                    <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
                </div>
            </div>
            
            <div class="col">
                <div class="form-group">
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness" class="custom-select">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
                </div>
            </div>
            

            <div class="col">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
                </div>

                <div class="form-group">
                    <button class="btn btn-success">Edit Dish</button>
                </div>
            </div>
        </div>
    </form>
</div>